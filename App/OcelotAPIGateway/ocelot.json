{
    "GlobalConfiguration": {
        "BaseUrl": "http://localhost:5050"
    },
    "Routes": [
        {
            "UpstreamPathTemplate": "/gateway/product-api/{everything}",
            "UpstreamHttpMethod": [
                "Get",
                "Delete",
                "Post",
                "Put"
            ],
            "DownstreamPathTemplate": "/api/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "productapi",
                    "Port": 5003
                }
            ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "GatewayAuthenticationScheme"
            },
            "FileCacheOptions": {
                "TtlSeconds": 10
            },
            "RateLimitOptions": {
                "EnableRateLimiting": true,
                "Period": "10s",
                "PeriodTimespan": 10,
                "Limit": 3
            }
        },
        {
            "UpstreamPathTemplate": "/gateway/customer-api/{everything}",
            "UpstreamHttpMethod": [
                "Get",
                "Delete",
                "Post",
                "Put"
            ],
            "DownstreamPathTemplate": "/api/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "customerapi",
                    "Port": 5004
                }
            ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "GatewayAuthenticationScheme"
            },
            "RateLimitOptions": {
                "EnableRateLimiting": true,
                "Period": "10s",
                "PeriodTimespan": 10,
                "Limit": 3
            }
        },
        {
            "UpstreamPathTemplate": "/gateway/setting-api/{everything}",
            "UpstreamHttpMethod": [
                "Get",
                "Delete",
                "Post",
                "Put"
            ],
            "DownstreamPathTemplate": "/api/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "settingapi",
                    "Port": 5005
                }
            ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "GatewayAuthenticationScheme"
            },
            "RateLimitOptions": {
                "EnableRateLimiting": true,
                "Period": "10s",
                "PeriodTimespan": 10,
                "Limit": 3
            }
        }
    ]
}